<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Sign Up</h2>
    
    <%= form_with model: @user, local: true, html: { class: "needs-validation" } do |form| %>
      
      <div class="mb-3">
        <%= form.label :username, class: "form-label fw-bold" %>
        <%= form.text_field :username, class: "form-control", placeholder: "username" %>
      </div>

      <div class="mb-3">
        <%= form.label :email, class: "form-label fw-bold" %>
        <%= form.email_field :email, class: "form-control", placeholder: "example@email.com" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label fw-bold" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>

      <div class="d-grid gap-2">
        <%= form.submit "Sign Up", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <a>Already have an account?</a> <%= link_to "Login", login_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
