<h2><%= @user.username %>'s Profile</h2>
<p>Email: <%= @user.email %></p>

<% if @user == current_user %>
  <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %> | <br>
  <%= button_to "Delete Account", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %> 
<% end %>

<%= link_to "Back to Home", root_path, class: "btn btn-warning" %>
