<h1>New Blog</h1>

<%= form_with(model: @blog, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, required: true %>
  </div>

  <div>
    <%= form.submit "Create Blog", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Back", blogs_path, class: "btn btn-secondary" %>
