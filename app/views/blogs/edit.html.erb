<h1>Edit Blog</h1>

<%= form_with model: @blog, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "Update Blog" %>
  </div>
<% end %>

<%= link_to "Back to Blogs", blogs_path %>
